<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.usda.fmsc.twotrails.fragments.main.MainToolsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:text="@string/str_map"
            android:id="@+id/mainFragToolsBtnMap"
            android:onClick="btnMapClick"
            android:layout_marginTop="5dp"
            android:enabled="false"
            style="@style/MainActivityButtons"/>

        <View style="@style/Dividers"/>

        <Button
            android:text="@string/main_btn_gearth"
            android:id="@+id/mainFragToolsBtnGoogleEarth"
            android:onClick="btnGoogleEarthClick"
            android:enabled="false"
            style="@style/MainActivityButtons"/>

        <View style="@style/Dividers"/>

        <Button
            android:text="@string/main_btn_haid"
            android:id="@+id/mainFragToolsBtnHAID"
            android:onClick="btnHAIDClick"
            android:enabled="false"
            style="@style/MainActivityButtons"/>

        <View style="@style/Dividers"/>


        <Button
            android:text="@string/main_btn_export"
            android:id="@+id/mainFragToolsBtnExport"
            android:onClick="btnExportClick"
            android:enabled="false"
            style="@style/MainActivityButtons"/>

        <View style="@style/Dividers"/>

        <Button
            android:text="@string/main_btn_plot_grid"
            android:id="@+id/mainFragToolsBtnPlotGrid"
            android:onClick="btnPlotGridClick"
            android:enabled="false"
            style="@style/MainActivityButtons"/>

        <View style="@style/Dividers"/>

        <Button
            android:text="@string/main_btn_multi_edit"
            android:id="@+id/mainFragToolsBtnMultiEdit"
            android:onClick="btnMultiEdit"
            android:enabled="false"
            style="@style/MainActivityButtons"
            android:visibility="gone"/>

        <View
            style="@style/Dividers"
            android:visibility="gone"/>

        <Button
            android:text="@string/main_btn_map_manager"
            android:id="@+id/mainFragToolsBtnMapManager"
            android:onClick="btnMapManagerClick"
            android:enabled="true"
            style="@style/MainActivityButtons"/>

        <View style="@style/Dividers"/>

        <Button
            android:text="@string/main_btn_gps_log"
            android:id="@+id/mainFragToolsBtnGpsLogger"
            android:onClick="btnGpsLoggerClick"
            android:enabled="true"
            style="@style/MainActivityButtons"/>

        <View style="@style/Dividers"/>

        <Button
            android:text="@string/main_btn_gps_status"
            android:id="@+id/mainFragToolsBtnGpsStatus"
            android:onClick="btnGpsStatusClick"
            android:enabled="true"
            style="@style/MainActivityButtons"/>

        <View style="@style/Dividers"/>

        <LinearLayout
            android:id="@+id/mainFragToolsTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:text="@string/str_test"
                android:id="@+id/mainFragToolsBtnTest"
                android:onClick="btnTest"
                android:enabled="true"
                style="@style/MainActivityButtons"/>

            <View style="@style/Dividers"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
