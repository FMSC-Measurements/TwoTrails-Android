<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.usda.fmsc.twotrails.activities.AcquireGpsActivity">

    <!--<fragment-->
        <!--android:id="@+id/map"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--class="com.google.android.gms.maps.SupportMapFragment"/>-->

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/primary"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/PopupTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acquireGpsToolbarLblLogged"
                android:text="Logged:"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acquireGpsToolbarLblLoggedValue"
                android:text="0"
                android:layout_toRightOf="@+id/acquireGpsToolbarLblLogged"
                android:layout_toEndOf="@+id/acquireGpsToolbarLblLogged"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acquireGpsToolbarLblReceived"
                android:text=":Received"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acquireGpsToolbarLblReceivedValue"
                android:text="0"
                android:layout_toLeftOf="@id/acquireGpsToolbarLblReceived"
                android:layout_toStartOf="@id/acquireGpsToolbarLblReceived"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textAlignment="textEnd"
                android:gravity="end"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <View
        style="@style/ToolbarElevation"
        android:layout_below="@id/toolbar"/>

    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/aqr_log"
            android:id="@+id/aqrBtnLog"
            android:layout_weight="1"
            android:onClick="btnLogClick"
            style="@style/buttonMaterial"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/aqr_calc"
            android:id="@+id/aqrBtnCalc"
            android:layout_weight="1"
            android:onClick="btnCalcClick"
            android:enabled="false"
            style="@style/buttonMaterial"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonBar">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:elevation="@dimen/card_elevation">

            <include
                layout="@layout/control_gps_info"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
