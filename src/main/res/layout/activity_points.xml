<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.usda.fmsc.twotrails.activities.PointsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_card_view">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:theme="@style/ToolbarTheme"
            app:popupTheme="@style/PopupTheme">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingLeft="0dp"
                android:paddingStart="0dp"
                android:background="@color/primary">

                <Spinner
                    android:id="@+id/pointsToolBarSpinnerPoly"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <View style="@style/ToolbarElevation"
              android:layout_below="@id/toolbar"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pointsViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/toolbar"/>
    </RelativeLayout>


    <AndroidExOld.UI.Widget.FloatingActionButton
        android:id="@+id/pointsFabAqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_ttpoint_gps_white_mini"
        app:layout_anchor="@id/pointsViewPager"
        app:layout_anchorGravity="bottom|center"
        app:fab_colorNormal="@color/primaryLight"
        app:fab_colorPressed="@color/primaryLighter"
        app:fab_colorRipple="@color/primaryLightest"
        android:onClick="btnAcquireClick" />


    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>


    <AndroidExOld.UI.Widget.FloatingActionMenu
        android:id="@+id/pointsFamNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_anchor="@id/pointsViewPager"
        app:layout_anchorGravity="bottom|end"

        app:menu_fab_size="normal"
        app:menu_showShadow="true"
        app:menu_colorNormal="@color/primaryLight"
        app:menu_colorPressed="@color/primaryLighter"
        app:menu_colorRipple="@color/primaryLightest"
        app:menu_animationDelayPerItem="50"
        app:menu_buttonSpacing="0dp"
        app:menu_openDirection="up">


        <AndroidExOld.UI.Widget.FloatingActionButton
            android:id="@+id/pointsFabGps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ttpoint_gps_white_mini"
            app:fab_colorNormal="@color/primaryLight"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="0dp"
            app:fab_shadowYOffset="0dp"
            app:fab_size="mini"
            android:onClick="btnPointNewGpsClick"
            android:contentDescription="@string/op_gps"/>

        <AndroidExOld.UI.Widget.FloatingActionButton
            android:id="@+id/pointsFabTake5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ttpoint_take5_white_mini"
            app:fab_colorNormal="@color/primaryLight"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="0dp"
            app:fab_shadowYOffset="0dp"
            app:fab_size="mini"
            android:onClick="btnPointNewTake5Click"
            android:contentDescription="@string/op_take5"/>

        <AndroidExOld.UI.Widget.FloatingActionButton
            android:id="@+id/pointsFabTrav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ttpoint_traverse_white_mini"
            app:fab_colorNormal="@color/primaryLight"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="0dp"
            app:fab_shadowYOffset="0dp"
            app:fab_size="mini"
            android:onClick="btnPointNewTravclick"
            android:contentDescription="@string/op_trav"/>

        <AndroidExOld.UI.Widget.FloatingActionButton
            android:id="@+id/pointsFabSideShot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ttpoint_sideshot_white_mini"
            app:fab_colorNormal="@color/primaryLight"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="0dp"
            app:fab_shadowYOffset="0dp"
            app:fab_size="mini"
            android:onClick="btnPointNewSideShotClick"
            android:contentDescription="@string/op_ss"/>

        <AndroidExOld.UI.Widget.FloatingActionButton
            android:id="@+id/pointsFabQndm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ttpoint_quondam_white_mini"
            app:fab_colorNormal="@color/primaryLight"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="0dp"
            app:fab_shadowYOffset="0dp"
            app:fab_size="mini"
            android:onClick="btnPointNewQuondamClick"
            android:contentDescription="@string/op_qndm"/>

        <AndroidExOld.UI.Widget.FloatingActionButton
            android:id="@+id/pointsFabWalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ttpoint_walk_white_mini"
            app:fab_colorNormal="@color/primaryLight"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="0dp"
            app:fab_shadowYOffset="0dp"
            app:fab_size="mini"
            android:onClick="btnPointNewWalkClick"
            android:contentDescription="@string/op_walk"/>

        <AndroidExOld.UI.Widget.FloatingActionButton
            android:id="@+id/pointsFabWay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ttpoint_way_white_mini"
            app:fab_colorNormal="@color/primaryLight"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="0dp"
            app:fab_shadowYOffset="0dp"
            app:fab_size="mini"
            android:onClick="btnPointNewWayClick"
            android:contentDescription="@string/op_way"/>
    </AndroidExOld.UI.Widget.FloatingActionMenu>
</android.support.design.widget.CoordinatorLayout>
