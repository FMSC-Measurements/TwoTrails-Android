<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.usda.fmsc.twotrails.activities.InertialActivity">

    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/toolbar"/>

        <View style="@style/ToolbarShadowViewElevation" android:layout_below="@id/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_below="@id/toolbar"
            android:layout_alignParentBottom="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/inertialCardInertialInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_margin="8dp"
                style="@style/ToolbarElevation2"
                android:visibility="gone">

                <!--                <include-->
                <!--                    layout="@layout/control_gps_info"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_width="match_parent"/>-->
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/inertialCardGpsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_margin="8dp"
                style="@style/ToolbarElevation2"
                android:visibility="visible">

                <include
                    layout="@layout/control_gps_info"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/inertialLayInfo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.usda.fmsc.android.widget.RecyclerViewEx
                    android:id="@+id/inertialRvPoints"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/inertialFab"
        style="@style/fabStyle"
        android:src="@drawable/ic_ttpoint_gps_white"
        app:layout_anchor="@id/lay1"
        app:layout_anchorGravity="bottom|right|end"
        android:contentDescription="@string/op_inertialStart"
        android:onClick="btnInertialClick"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/inertialFabStopCancel"
        style="@style/fabStyle"
        android:src="@drawable/ic_clear_white_36dp"
        app:layout_anchor="@id/lay1"
        app:layout_anchorGravity="bottom|left|start"
        android:visibility="gone"
        android:contentDescription="@string/str_cancel"
        android:onClick="btnStopCancelClick" />

    <RelativeLayout
        android:id="@+id/progressLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@drawable/progress_background">

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Large"
            android:layout_centerInParent="true"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/inertialProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>