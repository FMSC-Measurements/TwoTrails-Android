<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:paddingTop="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listRowDiagPointEditorTvName"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:padding="3dp"
        android:textColor="@android:color/black"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listRowDiagPointEditorTvName"
        android:layout_toEndOf="@id/listRowDiagPointEditorTvName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" >

        <TableRow
            android:gravity="end"
            android:padding="3dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance:"
                android:layout_gravity="center_vertical"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listRowDiagPointEditorTvDist"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:gravity="end"
            android:padding="3dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elevation:"
                android:layout_gravity="center_vertical"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listRowDiagPointEditorTvElev"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:textColor="@android:color/black"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>