    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- colorPrimary is used, for instance, for the default ActionBar
             (but not Toolbar) background.-->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:colorPrimary" tools:targetApi="21">@color/primary</item>

        <!-- colorPrimaryDark is used for the status bar (with the
             battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/primaryDark</item>

        <item name="colorAccent">@color/accent</item>
