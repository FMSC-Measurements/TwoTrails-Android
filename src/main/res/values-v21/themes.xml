<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
                <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
                <item name="android:alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
                <item name="alertDialogStyle">@style/AppCompatAlertDialogStyle</item>
                <item name="android:alertDialogStyle">@style/AppCompatAlertDialogStyle</item>

                <!-- colorPrimary is used, for instance, for the default ActionBar
                     (but not Toolbar) background.-->
                <item name="android:colorPrimary" tools:targetApi="21">@color/primary</item>
                <item name="colorPrimary">@color/primary</item>

                <item name="android:colorAccent" tools:targetApi="21">@color/accent</item>
                <item name="colorAccent">@color/accent</item>
                <!--<item name="android:elevation" tools:targetApi="21" >@dimen/toolbar_elevation</item>-->

                <!-- colorPrimaryDark is used for the status bar (with the
                     battery, clock, etc). -->
                <item name="colorPrimaryDark">@color/primaryDark</item>


                <item name="actionModeBackground">@color/primary</item>

                <item name="android:editTextStyle">@style/EditTextStyle</item>
                <item name="android:checkboxStyle">@style/CheckBoxStyle</item>


                <item name="android:textSelectHandleLeft">
                        @drawable/apptheme_text_select_handle_left
                </item>
                <item name="android:textSelectHandleRight">
                        @drawable/apptheme_text_select_handle_right
                </item>
                <item name="android:textSelectHandle">@drawable/apptheme_text_select_handle_middle
                </item>


                <item name="android:itemBackground">@android:color/white</item>

                <item name="android:textColor">@android:color/primary_text_light</item>
                <item name="android:navigationBarColor">?android:attr/colorPrimaryDark</item>
        </style>
</resources>